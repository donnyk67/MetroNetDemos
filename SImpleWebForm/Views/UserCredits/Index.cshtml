@model IEnumerable<SimpleWebForm.Models.UserCredit>

@{
    ViewBag.Title = "Index";
}

<h3>Select the user that you wish to play as or create your own</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Credits)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", "UserCredits", new { id = item.UserId }, null) |
        @Html.ActionLink("Select Player", "Details", "UserCredits", new { id = item.UserId }, null) |
        @Html.ActionLink("Delete", "Delete", "UserCredits", new { id = item.UserId }, null)
    </td>
</tr>
}

</table>
